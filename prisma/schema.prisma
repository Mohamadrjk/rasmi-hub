generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  id             String           @id @default(uuid())
  name           String
  slug           String           @unique
  website        String?
  industry       String?
  description    String?
  logoUrl        String?
  foundingYear   Int?
  employeeCount  Int?
  location       String?
  phone          String?
  email          String?
  address        String?
  ceoName        String?
  linkedinUrl    String?
  isVerified     Boolean          @default(false)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  // Relations
  news           News[]
  socialLinks    SocialLink[]
  crawlSources   CrawledSource[]
}

model News {
  id           String   @id @default(uuid())
  title        String
  summary      String?
  content      String
  sourceUrl    String   @unique
  publishedAt  DateTime
  createdAt    DateTime @default(now())
  crawledAt    DateTime @default(now())
  sourceType   SourceType
  tags         Json?
  isPinned     Boolean  @default(false)

  // Fact check fields
  isVerified   Boolean?     // آیا بررسی شده؟
  verifiedBy   String?      // بررسی توسط چه کسی؟
  verifiedAt   DateTime?    // زمان بررسی

  // Relations
  company      Company? @relation(fields: [companyId], references: [id])
  companyId    String?
}

model SocialLink {
  id        String     @id @default(uuid())
  platform  SocialType
  url       String
  company   Company    @relation(fields: [companyId], references: [id])
  companyId String
}

model CrawledSource {
  id            String      @id @default(uuid())
  url           String
  type          CrawlType
  selector      String?
  isActive      Boolean     @default(true)
  lastFetchedAt DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  company       Company     @relation(fields: [companyId], references: [id])
  companyId     String
}

enum SourceType {
  rss
  website
  social
  manual
}

enum SocialType {
  twitter
  linkedin
  youtube
  facebook
  other
}

enum CrawlType {
  rss
  html
  api
  manual
}
